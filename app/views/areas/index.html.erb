<%- model_class = Area -%>
<div class="page-header">
  <h1>Unidad de Negocio</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= link_to area.id, area_path(area) %></td>
        <td><%= area.name %></td>
        <td>
          <%= link_to t('.edit', :default => 'Editar'),
                      edit_area_path(area), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => 'Eliminar'),
                      area_path(area),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'EstÃ¡s seguro?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

