<%- model_class = Know -%>
<div class="page-header">
  <h1>Base de conocimiento</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Und.Negocio</th>
      <th>Categoría</th>
      <th>Detalle</th>
      <th><%=t '.actions', :default => "Acción" %></th>
    </tr>
  </thead>

  <tbody>
    <% @knows.each do |know| %>
      <tr>
        <td><%= know.name %></td>
        <td><%= know.area.name %></td>
        <td><%= know.categoria.name %></td>
        <td><%= know.descripcion %></td>
        <td>
          <%= link_to t('.edit', :default => "Editar"),
                      edit_know_path(know), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => "Eliminar"),
                      know_path(know),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliinar el registro...?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => "Nuevo"),
            new_know_path,
            :class => 'btn btn-primary' %>
